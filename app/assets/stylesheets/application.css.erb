/*beige = rgba(245, 240, 234, 1)
light pink = rgba(255, 66, 126, 0.8)
light gray = rgba(173, 173, 173, 0.5)*/

body {
  background-color: rgba(245, 240, 234, 1);
/*  background: url(<%= asset_path 'Wedding.jpg' %>) no-repeat center center fixed;*/
/*  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;*/
  font-family: 'Vampiro One', cursive;
  height: 100%;
}

.box-bg {
  /*background: rgba(0, 0, 0, 0.2);*/
  background: rgba(173, 173, 173, 0.5);
  border-radius: 10px ;
  border: 10px solid transparent;
}

.box-bg-index {
  /*background: rgba(0, 0, 0, 0.2);*/
  background: rgba(173, 173, 173, 0.5);
  border-radius: 10px ;
  border: 10px solid transparent;
  width: 600px;
  margin-left: 29%
}

.bride {
  width: 46%;
  font-size: 35px;
  float: right;
  margin-top: -90px;
  text-align: left;
}

.bride-image {
  background-image: url(<%= asset_path 'bride.png' %>);
  background-repeat: no-repeat;
  margin-left: 53%;
  width: 344px;
  height: 289px;
}

.btn {
  background-color: rgba(255, 66, 126, 1);
  border-color: rgba(255, 66, 126, 1);
  color: white;
}

.btn-filter {
  margin-top: 80px;
}

.btn-select {
  cursor: pointer;
  display: inline-block;
  padding: 10px 50px;
  transition: all 0.3s ease 0s;
  -moz-transition: all 0.3s ease 0s;
  -webkit-transition: all 0.3s ease 0s;
}

.btn-select:hover {
  background-color: rgba(255, 66, 126, 1);
  border-color: rgba(255, 66, 126, 1);
  color: white;
}

.btn-send {
  margin-left: 42%;
  background-color: rgba(255, 66, 126, 1);
  border-color: rgba(255, 66, 126, 1);
  color: white;
  cursor: pointer;
}

.card-left {
  float: left;
/*  width: 45%;*/
}

.card-pattern {
  background-image: url(<%= asset_path 'card.png' %>);
  background-repeat: repeat;
  background-position: left top;
  height: auto;
  margin: -60px auto;
  clear: both;
  padding-bottom: 40px;
  z-index: 999999;
}

.col-md-offset-9 {
  margin-left: 70%;
}

.container {
  min-height: 100%;
  height: auto;
  width: auto;
  margin: 110px 100px 0px 100px;
}

.container-fluid.gridster {
  width: 100%;
}

footer {
  height: 60px;
/*  background-color: #f5f5f5;*/
}

.gridster li {
  float: left;
  height: 560px;
  width: 360px;
  list-style: none;
  margin: 14px;
  color: black;
  display: inline-block;
  background: white;
  border-radius: 10px;
  box-shadow: 0 1px 2px rgba(34, 25, 25, 0.4);
}

.gridster ul {
/*  width: 100%;
*/  float: left;
}

.gridster .gs-w {
  cursor: pointer;
  -webkit-box-shadow: 0 0 5px rgba(0,0,0,0.3);
  box-shadow: 0 0 5px rgba(0,0,0,0.3);
}

.groom-image {
  background-image: url(<%= asset_path 'groom.png' %>);
  background-repeat: no-repeat;
  margin-left: 100%;
  width: 344px;
  height: 289px;
}

.groom {
  width: 44%;
  font-size: 35px;
  float: left;
  margin-top: -90px;
  text-align: right;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Vampiro One', cursive;
}

.input-group {
  margin-bottom: 20px;
}

.logout-link {
  margin-top: 8px ;
}

.image-tag-pin {
  height: 400px;
  width: 360px;
  border-radius: 10px 10px 0 0;
}

.img-circle {
  height: 40px;
  width: 40px;
  margin: 5px 15px;
}

.label {
  font-size: 20px;
  text-shadow: 4px 4px 8px gray;
}

.label-rel {
  margin: 0 15px;
  text-shadow: 4px 4px 8px gray;
}

.link-show {
  margin: -50px 0px 30px 60%;
}

.link-show a {
  color: rgba(173, 173, 173, 0.7);
  padding: 15px;
}

.link-show a:hover {
  background-color: rgba(255, 66, 126, 0.6);
  color: white;
}

main.login-bg {
  background: url(<%= asset_path 'Wedding.jpg' %>) no-repeat center center fixed;
  height: 1000px;
  margin: 0;
}

.middleheart {
  background-image: url(<%= asset_path 'heart.png' %>);
  background-position: center top;
    background-position-x: 50%;
  position: relative;
  width: 138px;
  height: 118px;
  left: 50%;
  margin: 0 -80px;
}

.navbar.navbar-default {
  background: rgba(255, 66, 126, 0.8);
  color: white;
  font-size: 40px;
  text-shadow: 4px 4px 8px gray;
  font-family: 'Vampiro One', cursive;
}

.noty_text {
  font-size: 18px;
  font-weight: normal;
}

.open {
  display: inline;
}

p.clr {
  text-align: center;
  padding-top: 30px;
}

.pin {
  display: inline-block;
  margin: 0 0px 15px;
  -webkit-column-break-inside: avoid;
  -moz-column-break-inside: avoid;
  column-break-inside: avoid;
  background: -webkit-linear-gradient(45deg, #FFF, #F9F9F9);
  opacity: 1;

  -webkit-transition: all .2s ease;
  -moz-transition: all .2s ease;
  -o-transition: all .2s ease;
  transition: all .2s ease;
}

.pin img {
  width: 100%;
  border-bottom: 1px solid #ccc;
  padding-bottom: 15px;
  margin-bottom: 5px;
}

.pin-p {
  font: 20px Helvetica;
  color: #333;
  margin: 0 20px;
  overflow: auto;
  max-height: 70px;
}

.row.profile {
  margin: 10px 0 0 0;
}

.text-leg {
  color: white;
  text-shadow: 4px 4px 8px gray;
  font-family: 'Vampiro One', cursive;
  font-size: 30px;
}


