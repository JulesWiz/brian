.input-group {
  margin-bottom: 20px;
}

.container {
  margin-top: 110px ;
  min-height: 100%;
  height: auto;
  /* Negative indent footer by its height */
  margin: 110px 0 auto -60px;
  /* Pad bottom by footer height */
  padding: 0 0 100px;
}

body {
  background: url(<%= asset_path 'Wedding.jpg' %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  color: white;
  font-family: 'Vampiro One', cursive;
  height: 100%;
}

.box-bg {
  /*background: rgba(0, 0, 0, 0.2);*/
  background: rgba(173, 173, 173, 0.5);
  border-radius: 10px ;
  border: 10px solid transparent;
}

.text-leg {
  color: white;
  text-shadow: 4px 4px 8px gray;
  font-family: 'Vampiro One', cursive;
  font-size: 30px;
}

.noty_text {
  font-size: 18px;
  font-weight: normal;
}
h1, h2, h3, h4, h5, h6, p {
  font-family: 'Vampiro One', cursive;
}

footer {
