.row
  .card-pattern
    p.clr We are Getting Married  -  Sunday, 8th June 2014
    .middleheart
    p.groom Jeff Bezos
    p.bride Jeffie Bezos
    .card-left
      .groom-image
    .card-middle
    .card-right
      .bride-image
    .btn.btn-lg.btn-send id="form-btn" Send Your Wishes
    .form-group.box-bg-index id="down"
      = form_for :form, url: form_index_url, method: :post, html: { id: "submit-form" } do |m|
        fieldset
          legend.text-leg Best Wishes to
          = render partial: "form", locals: { m: m }
          / - if @form.errors.any?
          /   #error_explanation
          /     h2
          /       = pluralize(@form.errors.count, "error")
          /       | prohibited this post from being saved:
          /     ul
          /       - @form.errors.full_messages.each do |msg|
          /         li = msg
