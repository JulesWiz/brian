      .btn-lg.btn-select type="button" id="btn-all" All
      span.glyphicon.glyphicon-heart
      .btn-lg.btn-select type="button" id="btn-family" Family
      span.glyphicon.glyphicon-heart
      .btn-lg.btn-select type="button" id="btn-friends" Friends
